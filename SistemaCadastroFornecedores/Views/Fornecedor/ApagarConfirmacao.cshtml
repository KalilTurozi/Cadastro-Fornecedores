@model List<FornecedorModel>

@{
    ViewData["Title"] = "Listagem de Fornecedores";
}

<div class="text-center">
    <h3>Realmente deseja excluir o fornecedor?</h3>
</div>

<a class="btn btn-primary" role="button" asp-controller="Fornecedor" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger" role="button" asp-controller="Fornecedor" asp-action="Apagar">Confirmar exclusão</a>